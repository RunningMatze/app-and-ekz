<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back_zettel"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
			style="@style/EkzButton"
            android:id="@+id/buttonAddEinkauf"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/addEinkauf" />

        <Button
			style="@style/EkzButton"
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/back" />

    </LinearLayout>

    <ListView
        android:id="@+id/einkaufListe"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="#0000FF"
        android:dividerHeight="2dp" >

        <!-- Preview: listitem=@layout/einkauf_listitem -->

    </ListView>

</LinearLayout>